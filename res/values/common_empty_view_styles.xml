<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <declare-styleable name="CommonEmptyView">
        <attr name="topText" format="reference|string" />
        <attr name="bottomText" format="reference|string" />
        <attr name="emptyNoticeBg" format="reference|color" />
        <attr name="showProgressBar" format="boolean" />
        <attr name="showRefreshBtn" format="boolean" />
    </declare-styleable>

    <style name="CommonEmptyViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonEmptyViewImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/common_empty_view_bg</item>
    </style>

    <style name="CommonEmptyViewTopTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="CommonEmptyViewBottomTextViewStyle" parent="@style/CommonEmptyViewTopTextViewStyle">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>